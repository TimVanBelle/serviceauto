<div class="navbar-wagon">
  <!-- Logo -->
  <p><%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "Main_cle_bleu.png"%>
  <% end %></p>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

  <%= link_to "Comment ça marche ?", "#", class: "navbar-wagon-item navbar-wagon-link" %>
  <!-- <%= link_to "Les tarifs", "#", class: "navbar-wagon-item navbar-wagon-link" %> -->
  <%= link_to "Devenir Alfred", "#", class: "navbar-wagon-item navbar-wagon-link" %>




    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li>
              <%= link_to "/account" do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profil" %>
              <% end %>
            </li>
            <li>
              <%= link_to account_orders_path do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Mes reservations" %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Se deconnecter" %>
              <% end %>
            </li>
          </ul>
          <%= link_to t(".top_call_to_action", default: "New Orders"),  "#", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= image_tag 'profil.jpg', class: "img-circle  avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        </div>
      </div>

    <% else %>
      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link", id: "connexion" %>
    <% end %>

  </div>



  <% if user_signed_in? %>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right">
            <li>
              <%= link_to do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profil" %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Se deconnecter" %>
              <% end %>
            </li>
      </div>
    </div>


  <% else %>
    <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right">

            <li>
             <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
               <i class="fa fa-question-circle"></i> <%= "Comment ça marche ?" %>
              <% end %>
            </li>

            <!-- <li>
             <%= link_to "#", class: "navbar-wagon-item navbar-wagon-link" do %>
              <i class="fa fa-eur"></i> <%= "Les tarifs" %>
              <% end %>
            </li> -->


            <li><%= link_to "Devenir Alf", "#", class: "navbar-wagon-item navbar-wagon-link" %></li>

            <li>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-sign-in"> </i> <%= t ".sign_in", default: "Login" %>
              <% end %>
            </li>

        </div>
      </div>

  <% end %>
  <li class="fa fa-shopping-basket" id="basket"</li>
  <%= link_to "#{current_order.order_items.size} ( #{number_to_currency current_order.subtotal} )", carts_show_path, class: "btn btn-link cart-text" %>



</div>
