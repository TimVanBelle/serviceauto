<% if current_order.id %>
  <li class="cart-text-hitbox">
    <a href="/cart" class="[ dropdown-toggle ][ animate ] cart-text">
      <div class="badge-container">
        <i class="fa fa-shopping-basket">
          <div class="badge badge-blue badge-order">
            <%= "#{current_order.items_count}" %>
          </div>
        </i>
      </div>
    </a>
    <ul class="[ dropdown-menu ]" role="menu">
      <li> <%= link_to  "#{number_to_currency current_order.subtotal}", cart_path %></li>
    </ul>
  </li>
<% end %>

