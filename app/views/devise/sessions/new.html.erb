

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6  col-sm-offset-3 col-md-6 col-md-offset-3">

      <div class="login">
        <div class="formulaire">

          <h2>Alfred</h2>
          <p>Connectez vous avec votre email et votre mot de passe</p>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,label: false, placeholder:'Email', required: true, autofocus: true %>
            <%= f.input :password, label: false, placeholder: 'Mot de passe', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
            <%= f.submit class: 'btn btn-block', value: 'Connexion' %>
          <!-- <input type="submit" name="commit" value="CONNEXION" class="btn"> -->
          </div>
          <% end %>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>







